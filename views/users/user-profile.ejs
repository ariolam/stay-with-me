<p> Hello <%= user.username %>!</p>
<form action="/userProfile" method="POST" enctype="multipart/form-data">
  <label>
    <input type="file" name="imageUrl" accept="image/png, image/jpg">
    <button type="submit">Upload image</button>
  </label>

</form>
<h1 class="bg-primary">My Bookings</h1>
<img src="<%= user.image %>" alt="image" />

<% bookings.forEach(booking => { %>
<p> <%= booking.date %></p>
<p> Total: $ <%=booking.hotel.pricePerNight *  booking.nights %> </p>
<p> <%= booking.nights %></p>
<p> <%= booking.startDate %></p>
<div>
  <p><%= booking.hotel.name %> </p>
  <p><%= booking.hotel.guests %> </p>
  <p><%= booking.hotel.pricePerNight %> </p>
  <p><%= booking.hotel.location %> </p>
  <img src=" <%= booking.hotel.image%> " alt="<%= booking.hotel.name %>">
</div>
<form action="/home/<%- booking.id %>/delete" method="POST">
  <button>Delete</button>
</form>
<button>
  <a href="/home/<%= booking.id %>/edit"> Update </a> <%#!-- link to redirect to the edit form for each specific booking  --%>
</button>
<% }) %>
<button> <a href="/home"> Next</a></button>